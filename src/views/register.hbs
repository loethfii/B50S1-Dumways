<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luthfi | Home</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://dumbways.id/favicon.ico"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css"
    />
    <link rel="stylesheet" href="/css/universal.css" />
  </head>
  <body class="bg-body-secondary">
    <!-- Nabvar -->
    <nav class="navbar navbar-expand-lg bg-nav-color py-3 sticky-top">
      <div class="container">
        <a class="navbar-brand me-4" href="/">
          <img src="/img/logo.png" alt="logo" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 h5">
            <li class="nav-item me-4">
              <a
                class="nav-link text-dark"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item me-4">
                <a class="nav-link text-dark" href="/add-project">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link text-dark" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <ul class="navbar-nav me-4 mb-2 mb-lg-0 h5 gap-3">
            <li class="nav-item">
              <a class="nav-link text-dark active" href="/register">Register</a>
            </li>
            <li>
              <a class="nav-link text-dark" href="/login">Login</a>
            </li>
          </ul>
          <a
            class="btn btn-dark hover-white"
            type="submit"
            href="/contact-me"
          >Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <!-- Form Register -->
    <div class="overflow-hidden">
      <div class="container my-5">
        <h1 class="text-center mb-5 fw-bold">Register to App</h1>
        <div class="d-flex justify-content-center">
          <form class="w-50" method="POST" action="/register">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold h5">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                style="height: 52px;"
                name="name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label fw-bold h5">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                aria-describedby="emailHelp"
                style="height: 52px;"
                name="email"
              />
            </div>
            <div class="mb-3 relative_password">
              <label
                for="password"
                class="form-label fw-bold h5"
              >Password</label>
              <input
                class="form-control"
                id="password"
                style="height: 52px;"
                name="password"
              />
              <div class="d-flex icon-abso">
                <i
                  class="fa-duotone fa-face-smile-horns fa-2x pointer dsp"
                  id="icon-smile-horns"
                ></i>
                <i
                  class="fa-duotone fa-face-smile-halo fa-2x pointer"
                  id="icon-smile-halo"
                ></i>
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <button
                type="submit"
                class="btn btn-primary btn-dark hover-white btn-lg"
              >
                Log in
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End Form Register -->
    <script src="js/login.js"></script>
  </body>
</html>