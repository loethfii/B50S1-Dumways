<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luthfi | Home</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://dumbways.id/favicon.ico"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css"
    />
    <link rel="stylesheet" href="/css/universal.css" />
  </head>
  <body>
    <!-- Nabvar -->
    <nav class="navbar navbar-expand-lg bg-nav-color py-3 sticky-top">
      <div class="container">
        <a class="navbar-brand me-4" href="/">
          <img src="/img/logo.png" alt="logo" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 h5">
            <li class="nav-item me-4">
              <a
                class="nav-link active text-dark"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item me-4">
              <a class="nav-link text-dark" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <a
            class="btn btn-dark hover-white"
            type="submit"
            href="/contact-me"
          >Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <!-- Content -->
    <div class="bg-body-secondary overflow-hidden">
      <div class="container my-5">
        <h1 class="text-center">{{data.project_name}}</h1>
        <div class="row mt-4">
          <div class="col-md-6 overflow-hidden">
            <div class="card" style="max-height: 350px">
              <img src="{{data.img}}" style="height: 100%" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="ms-2">
              <h4 class="fw-bold" style="margin-bottom: 0">Duration</h4>
              <div class="d-flex gap-3 align-items-center">
                <i class="fad fa-calendar-alt fa-xl"> </i>
                <p class="h5 pt-3">{{data.duration}}</p>
              </div>
              <h4 class="fw-bold mt-3" style="margin-bottom: 0">
                Technologies
              </h4>
              <div class="d-flex grid column-gap-5 w-50 flex-wrap">
                {{#each data.logo_tech}}
                  <div class="d-flex gap-3 align-items-center">
                    <i class="{{this}}"></i>
                    {{! <p class="h5 pt-3">Node Js</p> }}
                  </div>

                {{/each}}

                {{! <div class="d-flex gap-3 align-items-center">
                  <i class="fad fa-calendar-alt fa-xl"> </i>
                  <p class="h5 pt-3">React Js</p>
                </div>
                <div class="d-flex gap-3 align-items-center">
                  <i class="fad fa-calendar-alt fa-xl"> </i>
                  <p class="h5 pt-3">Next Js</p>
                </div>
                <div class="d-flex gap-3 align-items-center">
                  <i class="fad fa-calendar-alt fa-xl"> </i>
                  <p class="h5 pt-3">Type Script</p>
                </div> }}

              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <p class="h6 mt-3" style="text-align: justify; line-height: 28px">
            {{data.description}}
          </p>
        </div>
      </div>
    </div>

    <!-- End Content -->
    {{! <div style="display: flex;">
      <i class="fab fa-node fa-3x"></i>

    </div> }}

    <script src="/js/detail.js">

    </script>

    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <!-- End Script -->
  </body>
</html>