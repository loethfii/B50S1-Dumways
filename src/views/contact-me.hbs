<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luthfi | Contact Me</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://dumbways.id/favicon.ico"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/universal.css" />
  </head>
  <body>
    <!-- Nabvar -->
    <nav class="navbar navbar-expand-lg bg-nav-color py-3 sticky-top">
      <div class="container">
        <a class="navbar-brand me-4" href="/">
          <img src="/img/logo.png" alt="logo" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 h5">
            <li class="nav-item me-4">
              <a
                class="nav-link text-dark"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item me-4">
                <a class="nav-link text-dark" href="/add-project">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link text-dark" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          {{#if isLogin}}
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 h5 gap-3">
              <li class="nav-item">
                <a class="nav-link text-dark" href="/register">{{user}}</a>
              </li>
              <li>
                <a class="nav-link text-dark" href="/logout">Logout</a>
              </li>
            </ul>
          {{else}}
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 h5 gap-3">
              <li class="nav-item">
                <a class="nav-link text-dark" href="/register">Register</a>
              </li>
              <li>
                <a class="nav-link text-dark" href="/login">Login</a>
              </li>
            </ul>
          {{/if}}
          <a
            class="btn btn-dark hover-white"
            type="submit"
            href="/contact-me"
          >Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <!-- nav -->
    <div class="bg-body-secondary overflow-hidden">
      <div class="container my-5">
        <h1 class="text-center fw-bold">GET IN TOUCH</h1>
        <div class="d-flex justify-content-center">
          <form class="w-75 w-full">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold h5">Name</label>
              <input
                type="text"
                class="form-control"
                id="input-name"
                aria-describedby="emailHelp"
                style="height: 52px"
                name="name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label fw-bold h5">Email</label>
              <input
                type="email"
                class="form-control"
                id="input-email"
                aria-describedby="emailHelp"
                style="height: 52px"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="phone-number" class="form-label fw-bold h5">Phone
                Number</label>
              <input
                type="text"
                class="form-control"
                id="input-phone"
                aria-describedby="emailHelp"
                style="height: 52px"
                name="phoneNumber"
              />
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label fw-bold h5">
                Subject
              </label>
              <select
                name="subject"
                id="input-subject"
                class="form-select"
                style="height: 52px; font-size: 20px"
              >
                <option hidden selected>Pilih Subject</option>
                <option value="Fullstack Developer">Fullstack Developer</option>
                <option value="Backend Developer">Backend Developer</option>
                <option value="devops">Devops</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label fw-bold h5">Your Message</label>
              <textarea
                class="form-control"
                id="input-message"
                rows="5"
                cols="50"
                style="resize: none"
                name="message"
              ></textarea>
            </div>
            <div class="d-flex justify-content-end">
              <button
                type="button"
                class="btn btn-primary btn-dark hover-white btn-lg"
                onclick="formSubmission()"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- nav end -->

    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="/js/contact.js"></script>
    <!-- End Script -->
  </body>
</html>