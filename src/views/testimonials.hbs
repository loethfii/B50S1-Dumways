<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luthfi | Testimonials</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://dumbways.id/favicon.ico"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/universal.css" />
  </head>
  <body>
    <!-- Nabvar -->
    <nav class="navbar navbar-expand-lg bg-nav-color py-3 sticky-top">
      <div class="container">
        <a class="navbar-brand me-4" href="/">
          <img src="/img/logo.png" alt="logo" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 h5">
            <li class="nav-item me-4">
              <a
                class="nav-link text-dark"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item me-4">
                <a class="nav-link text-dark" href="/add-project">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a
                class="nav-link text-dark active"
                href="/testimonial"
              >Testimonials</a>
            </li>
          </ul>
          {{#if isLogin}}
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 h5 gap-3">
              <li class="nav-item">
                <a class="nav-link text-dark" href="/register">{{user}}</a>
              </li>
              <li>
                <a class="nav-link text-dark" href="/logout">Logout</a>
              </li>
            </ul>
          {{else}}
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 h5 gap-3">
              <li class="nav-item">
                <a class="nav-link text-dark" href="/register">Register</a>
              </li>
              <li>
                <a class="nav-link text-dark" href="/login">Login</a>
              </li>
            </ul>
          {{/if}}
          <a
            class="btn btn-dark hover-white"
            type="submit"
            href="/contact-me"
          >Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <!-- End Script -->
  </body>
</html>